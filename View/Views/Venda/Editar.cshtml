
@{
    ViewBag.Title = "Editar";
}

<div class="row">
    <div class="col-5">

        <form action="/venda/editar" method="post">
            <input type="hidden" name="id" />
            <div class="form-group"
                 >
                <label id="venda-cliente">Cliente</label>
                <select class="form-control"
                        id="venda-cliente"
                        name="idCliente">
                 </select>
                <div class="form-group">
                    <label for="venda-descricao">Descrição</label>
                    <textarea 
                              class="form-control"
                              id="venda-descricao"
                              name="descricao">
                    </textarea>
                </div>
                <button class="btn btn-primary float-right">Salvar</button>
            </div>

        </form>
    </div>

    <div class="col-7">
        <h5 class="text-primary">Lista de produtos</h5>
        <button class="btn btn-primary float-right mb-2"
                data-toggle="modal"
                data-target="#venda-produto-modal">
            Adicionar
        </button>

        <table class="table table-hover table-striped table-bordered" id="venda-produtos-index">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Quantidade</th>
                    <th>Preço</th>
                    <th>Ação</th>
                </tr>
            </thead>

        </table>
    </div>

</div>

@RenderPage("ProdutoModal.cshtml")